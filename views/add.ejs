<%- include("partials/header.ejs") %>

<h2>Add a New Book</h2>

<form action="/add" method="POST" class="book-form">
  <label for="title">📘 Title:</label><br>
  <input type="text" id="title" name="title" required><br><br>

  <label for="author">✍️ Author:</label><br>
  <input type="text" id="author" name="author" required><br><br>

  <label for="rating">⭐ Rating (out of 10):</label><br>
  <input type="number" id="rating" name="rating" min="1" max="10"><br><br>

  <label for="date_read">📅 Date Read:</label><br>
  <input type="date" id="date_read" name="date_read"><br><br>

  <label for="review">📝 Review:</label><br>
  <textarea id="review" name="review" rows="5" cols="40"></textarea><br><br>

  <label for="cover_id">🖼 Cover ID (from Open Library):</label><br>
  <input type="text" id="cover_id" name="cover_id" placeholder="e.g. 8675309"><br><br>

  <button type="submit">Add Book</button>
</form>

<p style="margin-top: 20px;"><a href="/">⬅ Back to Home</a></p>

